@using shopxanh.Help
@model IEnumerable<model.EF.Product>
<style>
    th, td {
        text-align: center;
    }

        td p {
            height: 50px;
            overflow-y: hidden;
            text-overflow: ellipsis;
        }
</style>
<table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
    <tr>
        <th>
            STT
        </th>
        <th>
            Danh Mục Sản Phẩm
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetaTitle)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoreImages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetaKeyword)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>

        <td>
            Thao tác
        </td>
    </tr>
    <tbody>
        @{var Number = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Raw(Number++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategorie.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetaTitle)
                </td>


                <td>
                    <img src="/Content/images/@item.Image" width="50px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoreImages)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetaKeyword)
                </td>

                <td>
                    @(item.CreatedDate.HasValue ? item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    <button class="btn">
                        <span class="glyphicon glyphicon-edit  " style="margin-right: 5px; color: red"></span>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    </button>|
                    <button class="btn">
                        <span class="glyphicon glyphicon-eye-open" style="margin-right: 5px; color: red"></span>
                        @Html.ActionLink("Details", "Details", new { id = item.ID })
                    </button>|
                    <button class="btn">
                        <span class="glyphicon glyphicon-trash" style="margin-right: 5px; color: red"></span>
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </button>|
                </td>
            </tr>
        }
    </tbody>
</table>


   

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>



