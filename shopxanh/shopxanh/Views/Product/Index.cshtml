@model model.EF.Product
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var category = (model.EF.ProductCategorie)ViewBag.Centagory;
    var releadproduct = (List<model.EF.Product>)ViewBag.RelatedProducts;
}



<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="back-links">
               
                <p><a href="/">Trang Chủ</a> >>>> <a href="/san-pham/@category.MetaTitle-@category.ID">@category.Name</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            <div class="cont-desc span_1_of_2">
                <div class="product-details">
                    <div class="grid images_3_of_2">
                        <div id="container">
                            <div id="products_example">
                                <div id="products">
                                    <div class="slides_container">
                                        <a href="#" target="_blank"><img src="/Content/images/@Model.Image" alt=" " /></a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="desc span_3_of_2">
                        <h2>@Model.Name </h2>
                        <p>@Model.Description</p>
                        <div class="price">
                            <p>Giá: <span>@Model.Price.ToString("N0")</span></p>
                        </div>
                        <div class="available">
                            <p>Available Options :</p>
                            <ul>
                                <li>
                                    Color:
                                    <select>
                                        <option>Silver</option>
                                        <option>Black</option>
                                        <option>Dark Black</option>
                                        <option>Red</option>
                                    </select>
                                </li>
                                <li>
                                    Size:<select>
                                        <option>Large</option>
                                        <option>Medium</option>
                                        <option>small</option>
                                        <option>Large</option>
                                        <option>small</option>
                                    </select>
                                </li>
                                <li>
                                    Quality:<select>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </li>
                            </ul>
                        </div>
                        <div class="share-desc">
                            <div class="share">
                                <p>Chia sẻ sản phẩm :</p>
                                <ul>
                                    <li><a href="#"><img src="/Content/images/facebook.png" alt="" /></a></li>
                                    <li><a href="#"><img src="/Content/images/twitter.png" alt="" /></a></li>
                                </ul>
                            </div>
                            <div class="button"><span><a href="/them-gio-hang?productId=@Model.ID&quantity=1">Thêm Vào Giỏ Hàng</a></span></div>
                            <div class="clear"></div>
                        </div>
                        <div class="wish-list">
                            <ul>
                                <li class="wish"><a href="#">Thêm Vào Danh Sách Yêu Thích</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="product_desc">
                    <div id="horizontalTab">
                        <ul class="resp-tabs-list">
                            <li style="color:red">Chi tiết sản phẩm</li>

                            <div class="clear"></div>
                        </ul>
                        <div class="resp-tabs-container">
                            <div class="product-desc">
                                <p>@Html.Raw(Model.Detail)</p>
                            </div>

                        </div>
                    </div>
                </div>

                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#horizontalTab').easyResponsiveTabs({
                            type: 'default', //Types: default, vertical, accordion
                            width: 'auto', //auto or any width like 600px
                            fit: true   // 100% fit in a container
                        });
                    });
                </script>
                <div class="content_bottom">
                    <div class="heading">
                        <h3 style="color:cornflowerblue">Sản phẩm liên quan</h3>
                    </div>
                    <div class="see">
                        <p><a href="">Xem tất cả</a></p>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="section group">
                    @foreach (var iteam in releadproduct)
                    {
                        var url = "/chi-tiet/" + iteam.MetaTitle + "-" + iteam.ID;
                        <div class="grid_1_of_4 images_1_of_4">
                            <a href="@url">
                                <img src="/Content/images/@iteam.Image" alt="">
                            </a>
                            <div class="price" style="border:none">
                                <div class="add-cart" style="float:none">
                                    <h4 style="color:aquamarine"><a href="/them-gio-hang?productId=@iteam.ID&quantity=1">Thêm vào giỏ hàng</a></h4>
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="rightsidebar span_3_of_1">
                <h2 style="color:brown">Danh mục sản phẩm</h2>
                @{ Html.RenderAction("productcentagory", "Product");}
                <div class="subscribe">
                    <h2>HÃY ĐỂ LẠI MAIL</h2>
                    <p>Để lại mail của bạn để nhận nhiều thông tin khuyến mãi</p>
                    <div class="signup">
                        <form>
                            <input type="text" value="E-mail address" onfocus="this.value = '';" onblur="if (this.value == '') { this.value = 'E-mail address' }"><input type="submit" value="Sign up">
                        </form>
                    </div>
                </div>
                <div class="fb-comments" data-href="https://developers.facebook.com/docs/plugins/comments#configurator" data-numposts="5" data-colorscheme="light">></div>
                
            </div>

           
    </div>
</div>
    </div>

